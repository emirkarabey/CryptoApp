<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fav_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="#FFA500">
        <TextView
            android:id="@+id/fav_cryptoNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#F8323333"
            android:layout_margin="5dp"></TextView>

        <TextView
            android:id="@+id/fav_cryptoPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            ></TextView>
        <ImageButton
            android:id="@+id/fav_fav_btn"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_favorite_clicked_24"
            android:background="#FFA500"
            >
        </ImageButton>
    </LinearLayout>
</androidx.cardview.widget.CardView>